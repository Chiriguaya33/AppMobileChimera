<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/chimera_teal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Entrega de Misión"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeaderTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvSubmissionMissionName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargando nombre de tarea..."
                android:textColor="@color/chimera_teal"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Comentario o Respuesta"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etSubmissionComment"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_chip_bg"
                android:backgroundTint="#F0F0F0"
                android:gravity="top"
                android:hint="Escribe aquí tu respuesta..."
                android:padding="12dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Adjuntar Archivo (PDF, Img, etc.)"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPickFile"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seleccionar Archivo"
                app:cornerRadius="12dp"
                app:strokeColor="@color/chimera_orange" />

            <TextView
                android:id="@+id/tvSelectedFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ningún archivo seleccionado"
                android:textAlignment="center"
                android:textColor="@color/chimera_text_grey"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitMission"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/chimera_orange"
                android:text="ENTREGAR TAREA"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

            <ProgressBar
                android:id="@+id/pbSubmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>