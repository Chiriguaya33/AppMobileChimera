<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <View
            android:id="@+id/iconBg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#F0F4F4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivMissionIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_missions"
            app:tint="@color/chimera_teal"
            app:layout_constraintBottom_toBottomOf="@id/iconBg"
            app:layout_constraintEnd_toEndOf="@id/iconBg"
            app:layout_constraintStart_toStartOf="@id/iconBg"
            app:layout_constraintTop_toTopOf="@id/iconBg" />

        <TextView
            android:id="@+id/tvMissionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Laboratorio 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/xpBadge"
            app:layout_constraintStart_toEndOf="@id/iconBg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMissionDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Seguridad Informática • Tarea"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@id/tvMissionTitle"
            app:layout_constraintTop_toBottomOf="@id/tvMissionTitle" />

        <TextView
            android:id="@+id/xpBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_chip_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="+450 XP"
            android:textColor="@color/chimera_orange"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Vence: Jueves 19 Feb"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/chimera_teal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconBg" />

        <ProgressBar
            android:id="@+id/missionProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="8dp"
            android:progress="0"
            android:progressTint="@color/chimera_orange"
            app:layout_constraintTop_toBottomOf="@id/tvDueDate" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>